<div class="social-media"
    tal:condition="view/show_fblike|nothing">

    <div 
        class="fb-like" 
        data-width="auto" 
        data-layout="button" 
        data-action="recommend" 
        data-show-faces="false" 
        data-share="false"
        tal:attributes="data-href view/likeurl"></div>

    <div id="googleplusone">
        <g:plusone 
            size="standard"
            tal:attributes="href view/likeurl"></g:plusone>
    </div>

</div>
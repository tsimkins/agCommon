<tal:fblike
    tal:condition="view/show_fblike|nothing">
    
    <fb:like 
        id="fblike" 
        title="Recommend this on Facebook"
        tal:attributes="href view/likeurl"
        send="false" 
        show_faces="true" 
        action="recommend"
        width="100%">
    </fb:like>

    <div id="googleplusone">
        <g:plusone 
            size="standard"
            tal:attributes="href view/likeurl"></g:plusone>
    </div>
    
</tal:fblike>